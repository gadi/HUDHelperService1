<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@drawable/app_bg">
    <TextView
        android:id="@+id/tv_usb_state" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="usb is disconnected"
        android:textColor="@android:color/white"
        android:layout_gravity="center_horizontal"
        android:gravity="center"/>
    <ImageView 
         android:layout_width="92dp"
         android:layout_height="98dp"
         android:layout_marginTop="68dp"
         android:src="@drawable/ic_startup_logo"
         android:layout_gravity="center_horizontal"/>
    <ImageView 
         android:layout_width="136dp"
         android:layout_height="24dp"
         android:layout_marginTop="167dp"
         android:src="@drawable/ic_startup_app_name"
         android:layout_gravity="center_horizontal"/>
    <ImageView 
         android:layout_width="94dp"
         android:layout_height="16dp"
         android:layout_marginTop="205dp"
         android:src="@drawable/ic_startup_ad"
         android:layout_gravity="center_horizontal"/>
    
    
    <FrameLayout 
        android:layout_width="225dp"
        android:layout_height="18dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="227dp">
	    <ImageView 
	         android:layout_width="133dp"
	         android:layout_height="3.5dp"
	         android:src="@drawable/ic_startup_line"
	         android:layout_gravity="center"/>
	   <ImageView 
	         android:layout_width="31dp"
	         android:layout_height="18dp"
	         android:src="@drawable/ic_startup_headunit"
	         android:layout_gravity="left"/>
	   <ImageView 
	         android:layout_width="31dp"
	         android:layout_height="18dp"
	         android:src="@drawable/ic_startup_hud"
	         android:layout_gravity="right"/>
     </FrameLayout>
  
</FrameLayout>

